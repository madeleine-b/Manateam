{
  "manifest_version": 2,

  "name": "ColorSchemer",
  "description": "Modify webpages to personalized colorschemes",
  "version": "1.0",
  
  "background": {
    "scripts": ["background.js", "content_script.js"],
    "persistant": false
  },

 "options_page": "options.html",

 "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-2.1.3.js",
            "background.js",
            "colormanip.js",
            "stylesmanip.js"],
      "run_at": "document_start"
    }
  ],

"browser_action": {
    "default_icon": "icon.png",
    "default_title": "Customize Color",
    "default_popup": "popup.html"
  },

  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" },

  "permissions": [
    "activeTab",
    "tabs",
    "fontSettings",
    "<all_urls>"
  ]
}